@page
@model LoginModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}
@{
    ViewData["Title"] = "Log in";
}


<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class=".bg-blue .bg-lighten-xl">

            <div class="container">
                <div class="row justify-content-center">

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-7 col-lg-5">
                        <div class="wrap">
                            <div class="img" style="background-image: url(C:/Users/Marwa/source/repos/electionMVC/ELECTION/Areas/Identity/Pages/Account/bg-1.jpg);"></div>
                            <div class="login-wrap p-4 p-md-5">

                                <form id="account" method="post">
                                    <div class="form-group mt-3">
                                        <label class="form-control-placeholder" asp-for="Input.CinAdmin">CIN</label>
                                        <input asp-for="Input.CinAdmin" class="form-control" />
                                        <span asp-validation-for="Input.CinAdmin" class="text-danger"></span>


                                    </div>
                                    <div class="form-group">
                                        <label class="form-control-placeholder" asp-for="Input.MotDePasse">Password</label>
                                        <input type="password" class="form-control" asp-for="Input.MotDePasse" required>
                                        <span asp-validation-for="Input.MotDePasse" class="text-danger"></span>







                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Log in</button>
                                    </div>
                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-left">
                                            <label class="checkbox-wrap checkbox-primary mb-0">
                                                Remember Me
                                                <input type="checkbox" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="w-50 text-md-right">
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>


