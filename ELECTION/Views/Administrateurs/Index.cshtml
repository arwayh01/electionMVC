@model IEnumerable<ELECTION.Models.Administrateur>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CinAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotDePasse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotDePasse)
            </td>
