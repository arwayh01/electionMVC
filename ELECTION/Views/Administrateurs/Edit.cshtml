@model ELECTION.Models.Administrateur

@{
    ViewData["Title"] = "Edit";
}


<h4>Mise à jour administrateur</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
                   <div class="col-12">

                                
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AdministrateurId" />
            <div class="form-group">
                <label asp-for="NomAdmin" class="control-label">Nom </label>
                <input asp-for="NomAdmin" class="form-control" />
                <span asp-validation-for="NomAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrenomAdmin" class="control-label">Prenom</label>
                <input asp-for="PrenomAdmin" class="form-control" />
                <span asp-validation-for="PrenomAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CinAdmin" class="control-label">Numéro Cin</label>
                <input asp-for="CinAdmin" class="form-control" />
                <span asp-validation-for="CinAdmin" class="text-danger"></span>
            </div>
                      

            <div class="form-group">
                <label asp-for="MotDePasse" class="control-label">Mot de pass</label>
                <input type="password"asp-for="MotDePasse" class="form-control" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>
                       <div class="row">
                        <div class="col-md-10"></div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
                                                 </div>
                       </div>
                        
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retourner</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
